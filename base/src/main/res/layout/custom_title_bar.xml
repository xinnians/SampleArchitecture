<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutTitleBar"
    >

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/back_arrow"
        android:layout_marginStart="16dp"
        />

    <ImageView
        android:id="@+id/ivTitleIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        android:src="@drawable/title"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        app:layout_constraintStart_toEndOf="@+id/ivTitleIcon"
        app:layout_constraintTop_toTopOf="@+id/ivTitleIcon"
        android:layout_marginStart="6dp"
        android:textSize="12sp"
        android:text="金牌玩家"
        />

    <TextView
        android:id="@+id/tvGroup"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        app:layout_constraintStart_toEndOf="@+id/tvName"
        app:layout_constraintTop_toTopOf="@+id/ivTitleIcon"
        android:layout_marginStart="6dp"
        android:textSize="12sp"
        android:text="獎金組"
        />

    <TextView
        android:id="@+id/tvCost"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        app:layout_constraintStart_toEndOf="@+id/tvGroup"
        app:layout_constraintTop_toTopOf="@+id/ivTitleIcon"
        android:layout_marginStart="6dp"
        android:textSize="12sp"
        android:text="1980"
        />

    <TextView
        android:id="@+id/tvDollar"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        app:layout_constraintStart_toEndOf="@+id/ivTitleIcon"
        app:layout_constraintBottom_toBottomOf="@+id/ivTitleIcon"
        android:layout_marginStart="6dp"
        android:textSize="12sp"
        android:text="$"
        />

    <TextView
        android:id="@+id/tvMoney"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        app:layout_constraintStart_toEndOf="@+id/tvDollar"
        app:layout_constraintBottom_toBottomOf="@+id/ivTitleIcon"
        android:layout_marginStart="4dp"
        android:textSize="12sp"
        android:text="・・・・・・・"
        />

    <ImageView
        android:id="@+id/ivShowMoney"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@+id/tvMoney"
        app:layout_constraintBottom_toBottomOf="@+id/ivTitleIcon"
        android:layout_marginStart="4dp"
        android:src="@drawable/close_eye"
        />
    
    <ImageView
        android:id="@+id/ivGroup"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:src="@drawable/group"
        />

</androidx.constraintlayout.widget.ConstraintLayout>