<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    >

    <TextView
        android:id="@+id/tvPickerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="筛选条件"
        android:textSize="@dimen/sp_18"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_20"
        android:src="@drawable/close"
        />

    <TextView
        android:id="@+id/tvLabelStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        app:layout_constraintTop_toBottomOf="@+id/tvPickerTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginStart="@dimen/dp_35"
        />

    <TextView
        android:id="@+id/tvLabelEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tvPickerTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_35"
        />

    <TextView
        android:id="@+id/tvStartDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="@dimen/sp_28"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelStart"
        app:layout_constraintStart_toStartOf="@+id/tvLabelStart"
        />

    <TextView
        android:id="@+id/tvStartMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="month"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="@+id/tvStartDay"
        app:layout_constraintStart_toEndOf="@+id/tvStartDay"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_3"
        />

    <TextView
        android:id="@+id/tvLabelDash"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="-"
        android:textSize="@dimen/sp_28"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvEndDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End"
        android:textSize="@dimen/sp_28"
        app:layout_constraintBottom_toBottomOf="@+id/tvStartDay"
        app:layout_constraintEnd_toStartOf="@+id/tvEndMonth"
        android:layout_marginEnd="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/tvEndMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="month"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="@+id/tvStartDay"
        app:layout_constraintEnd_toEndOf="@+id/tvLabelEnd"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_3"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/tvStartDay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dp_70"
        android:background="@drawable/bg_radius_white_board"
        >

        <TextView
            android:id="@+id/tvLabelNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择区间不得超过45天"
            android:textSize="@dimen/sp_12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp_19"
            />

        <com.savvi.rangedatepicker.CalendarPickerView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:scrollbarStyle="outsideOverlay"
            app:tsquare_orientation_horizontal="false"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelNote"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:text="查询"
        android:textColor="#fff"
        android:background="@drawable/bg_button"
        />
</androidx.constraintlayout.widget.ConstraintLayout>