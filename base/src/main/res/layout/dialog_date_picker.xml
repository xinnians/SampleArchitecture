<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    >

    <TextView
        android:id="@+id/tvPickerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="筛选条件"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/close"
        />

    <TextView
        android:id="@+id/tvLabelStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        app:layout_constraintTop_toBottomOf="@+id/tvPickerTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="35dp"
        />

    <TextView
        android:id="@+id/tvLabelEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tvPickerTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="35dp"
        />

    <TextView
        android:id="@+id/tvStartDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelStart"
        app:layout_constraintStart_toStartOf="@+id/tvLabelStart"
        />

    <TextView
        android:id="@+id/tvStartMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="month"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvStartDay"
        app:layout_constraintStart_toEndOf="@+id/tvStartDay"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="3dp"
        />

    <TextView
        android:id="@+id/tvLabelDash"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="-"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvEndDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvStartDay"
        app:layout_constraintEnd_toStartOf="@+id/tvEndMonth"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:id="@+id/tvEndMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="month"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvStartDay"
        app:layout_constraintEnd_toEndOf="@+id/tvLabelEnd"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="3dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/tvStartDay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg_radius_white_board"
        >

        <TextView
            android:id="@+id/tvLabelNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择区间不得超过45天"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="19dp"
            />

        <com.savvi.rangedatepicker.CalendarPickerView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:scrollbarStyle="outsideOverlay"
            app:tsquare_orientation_horizontal="false"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelNote"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="查询"
        android:textColor="#fff"
        android:background="@drawable/bg_button"
        />
</androidx.constraintlayout.widget.ConstraintLayout>