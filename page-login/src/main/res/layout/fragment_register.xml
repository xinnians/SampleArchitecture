<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:clickable="true"
    >
    
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_50"
        android:src="@drawable/abc_vector_test"
        />
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_35"
        >
    
        <TextView
            android:id="@+id/tvAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/sp_14"
            android:text="用戶名"
            />
    
    
        <EditText
            android:id="@+id/etAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAccount"
            android:layout_marginTop="@dimen/dp_10"
            android:hint="請輸入用戶名"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_11"
            android:paddingStart="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/radius_board"
            />
    
        <TextView
            android:id="@+id/tvAccountMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etAccount"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="#FF0000"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPws"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/clAccount"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_35"
        >
        
        <TextView
            android:id="@+id/tvPws"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/sp_14"
            android:text="密碼"
            />
        
        
        <EditText
            android:id="@+id/etPws"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPws"
            android:layout_marginTop="@dimen/dp_10"
            android:inputType="textPassword"
            android:hint="請輸入密碼"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_11"
            android:paddingStart="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/radius_board"
            />
    
        <TextView
            android:id="@+id/tvHide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/etPws"
            app:layout_constraintTop_toTopOf="@+id/etPws"
            app:layout_constraintBottom_toBottomOf="@+id/etPws"
            android:layout_marginEnd="@dimen/dp_16"
            android:textSize="@dimen/sp_12"
            android:text="show"
            />
        
        <TextView
            android:id="@+id/tvPwsMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPws"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="#FF0000"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clInvite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/clPws"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_35"
        >
        
        <TextView
            android:id="@+id/tvInvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/sp_14"
            android:text="推薦代碼（選填）"
            />
        
        
        <EditText
            android:id="@+id/etInvite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvInvite"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_11"
            android:paddingStart="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/radius_board"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    
    
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clInvite"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_35"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        />
    
    <TextView
        android:id="@+id/tvLoginMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister"
        android:layout_marginTop="@dimen/dp_50"
        android:textSize="@dimen/sp_12"
        />


</androidx.constraintlayout.widget.ConstraintLayout>