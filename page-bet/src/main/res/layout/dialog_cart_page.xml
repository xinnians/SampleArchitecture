<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_white_board"
    >

    <TextView
        android:id="@+id/tvCartDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认删除此注单？"
        android:textSize="@dimen/sp_18"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_20"
        android:src="@drawable/ic_icon_close"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvCartDialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDelAndEditLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="@dimen/dp_43"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clEditLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/colorWhite"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clRateRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginStart="@dimen/dp_20"
                    >

                    <com.example.base.widget.BetUnitSelector
                        android:id="@+id/viewBetUnitSelector"
                        android:layout_width="@dimen/dp_210"
                        android:layout_height="@dimen/dp_30"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clRateRow2"
                    android:layout_width="@dimen/dp_106"
                    android:layout_height="@dimen/dp_30"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginEnd="@dimen/dp_20"
                    >

                    <com.example.base.widget.BetMultipleSelector
                        android:id="@+id/viewBetMultipleSelector"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clRateRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    app:layout_constraintTop_toBottomOf="@+id/clRateRow1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_5"
                    >

                    <com.example.base.widget.CustomSwitch
                        android:id="@+id/csPlayRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                app:layout_constraintTop_toBottomOf="@+id/clEditLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:text="确认"
                android:textColor="#fff"
                android:background="@drawable/bg_button"
                android:visibility="gone"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clAppendLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorWhite"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:visibility="gone"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clAppendContent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_108"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@drawable/bg_lightgray_5_corner"
                >

                <EditText
                    android:id="@+id/etAppendCount"
                    android:layout_width="@dimen/dp_107"
                    android:layout_height="@dimen/dp_33"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_17"
                    android:background="@drawable/bg_white_25_corner"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:inputType="number"
                    />

                <TextView
                    android:id="@+id/tvLabelIssueNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/etAppendCount"
                    app:layout_constraintTop_toTopOf="@+id/etAppendCount"
                    app:layout_constraintBottom_toBottomOf="@+id/etAppendCount"
                    android:layout_marginStart="@dimen/dp_6"
                    android:text="期"
                    android:textSize="@dimen/sp_14"
                    />

                <RadioButton
                    android:id="@+id/rbWinStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/etAppendCount"
                    app:layout_constraintBottom_toBottomOf="@+id/etAppendCount"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="@dimen/sp_14"
                    android:text="追中即停"
                    android:layout_marginEnd="@dimen/dp_24"
                    />

                <View
                    android:id="@+id/view1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#c9c9c9"
                    app:layout_constraintStart_toStartOf="@id/etAppendCount"
                    app:layout_constraintEnd_toEndOf="@id/rbWinStop"
                    app:layout_constraintTop_toBottomOf="@+id/etAppendCount"
                    android:layout_marginTop="@dimen/dp_18"
                    />

                <TextView
                    android:id="@+id/tvLabelIssueAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/etAppendCount"
                    app:layout_constraintTop_toBottomOf="@+id/view1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="每期投注额"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:id="@+id/tvIssueAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/rbWinStop"
                    app:layout_constraintTop_toBottomOf="@+id/view1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="2000 元"
                    android:textSize="@dimen/sp_14"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnAppend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clAppendContent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:text="确定追号"
                android:textColor="#fff"
                android:background="@drawable/bg_button"
                />

            <Button
                android:id="@+id/btnMore"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                app:layout_constraintTop_toBottomOf="@+id/btnAppend"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:text="更多"
                android:textColor="#fff"
                android:background="@drawable/bg_button"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clAppendMoreLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorWhite"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:visibility="gone"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSettingType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_23"
                >

                <TextView
                    android:id="@+id/tvAppendType1"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/dp_20"
                    android:gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:text="同倍追号"
                    android:background="@drawable/bg_white_5_corner"
                    />

                <TextView
                    android:id="@+id/tvAppendType2"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:text="翻倍追号"
                    android:background="@drawable/bg_white_5_corner"
                    />

                <TextView
                    android:id="@+id/tvAppendType3"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:text="利润追号"
                    android:background="@drawable/bg_white_5_corner"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clContentLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_183"
                app:layout_constraintTop_toBottomOf="@+id/clSettingType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@drawable/bg_lightgray_5_corner"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clContentRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/dp_17"
                    >

                    <EditText
                        android:id="@+id/etMoreCount"
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="@dimen/dp_33"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/dp_20"
                        android:background="@drawable/bg_white_25_corner"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:inputType="number"
                        android:hint="追号期数"
                        />

                    <TextView
                        android:id="@+id/tvLabel1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/etMoreCount"
                        app:layout_constraintTop_toTopOf="@+id/etMoreCount"
                        app:layout_constraintBottom_toBottomOf="@+id/etMoreCount"
                        android:layout_marginStart="@dimen/dp_6"
                        android:text="期"
                        android:textSize="@dimen/sp_14"
                        />

                    <EditText
                        android:id="@+id/etAppendMultiple"
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="@dimen/dp_33"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvLabel2"
                        android:layout_marginStart="@dimen/dp_20"
                        android:background="@drawable/bg_white_25_corner"
                        android:layout_marginEnd="@dimen/dp_6"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:inputType="number"
                        android:hint="起始倍数"
                        />

                    <TextView
                        android:id="@+id/tvLabel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/etMoreCount"
                        app:layout_constraintBottom_toBottomOf="@+id/etMoreCount"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:text="倍"
                        android:textSize="@dimen/sp_14"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clContentRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/clContentRow1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/dp_12"
                    android:visibility="gone"
                    >

                    <EditText
                        android:id="@+id/etIssueStep"
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="@dimen/dp_33"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/dp_20"
                        android:background="@drawable/bg_white_25_corner"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:inputType="number"
                        android:hint="间隔期数"
                        />

                    <TextView
                        android:id="@+id/tvLabel3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/etIssueStep"
                        app:layout_constraintTop_toTopOf="@+id/etIssueStep"
                        app:layout_constraintBottom_toBottomOf="@+id/etIssueStep"
                        android:layout_marginStart="@dimen/dp_6"
                        android:text="期"
                        android:textSize="@dimen/sp_14"
                        />

                    <EditText
                        android:id="@+id/etDoubleMultiple"
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="@dimen/dp_33"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvLabel4"
                        android:layout_marginStart="@dimen/dp_20"
                        android:background="@drawable/bg_white_25_corner"
                        android:layout_marginEnd="@dimen/dp_6"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:inputType="number"
                        android:hint="翻倍倍数"
                        />

                    <TextView
                        android:id="@+id/tvLabel4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/etDoubleMultiple"
                        app:layout_constraintBottom_toBottomOf="@+id/etDoubleMultiple"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:text="期"
                        android:textSize="@dimen/sp_14"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clContentRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/clContentRow1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/dp_12"
                    >

                    <EditText
                        android:id="@+id/etRateOfReturn"
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="@dimen/dp_33"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/dp_20"
                        android:background="@drawable/bg_white_25_corner"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:inputType="number"
                        android:hint="收益率"
                        />

                    <TextView
                        android:id="@+id/tvLabel5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/etRateOfReturn"
                        app:layout_constraintTop_toTopOf="@+id/etRateOfReturn"
                        app:layout_constraintBottom_toBottomOf="@+id/etRateOfReturn"
                        android:layout_marginStart="@dimen/dp_6"
                        android:text="%"
                        android:textSize="@dimen/sp_14"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <RadioButton
                    android:id="@+id/rbMoreWinStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/view11"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="@dimen/sp_14"
                    android:text="追中即停"
                    android:layout_marginEnd="@dimen/dp_24"
                    android:layout_marginBottom="@dimen/dp_10"
                    />

                <View
                    android:id="@+id/view11"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#c9c9c9"
                    app:layout_constraintStart_toStartOf="@id/clContentRow1"
                    android:layout_marginStart="@dimen/dp_20"
                    app:layout_constraintEnd_toEndOf="@id/rbMoreWinStop"
                    app:layout_constraintBottom_toTopOf="@+id/tvLabelMoreIssueAmount"
                    android:layout_marginBottom="@dimen/dp_10"
                    />

                <TextView
                    android:id="@+id/tvLabelMoreIssueAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/clContentRow1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="每期投注额"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:id="@+id/tvMoreIssueAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/rbMoreWinStop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="2000 元"
                    android:textSize="@dimen/sp_14"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnGenerate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                app:layout_constraintTop_toBottomOf="@+id/clContentLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_43"
                android:text="生成期号"
                android:textColor="#fff"
                android:background="@drawable/bg_button"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>