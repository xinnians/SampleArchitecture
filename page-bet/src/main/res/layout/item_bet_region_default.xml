<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutBetRegion"
    android:layout_width="@dimen/dp_335"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_marginEnd="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_9"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/bg_white_10_corner"
    android:elevation="@dimen/dp_2">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_32"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_darkgray_10_top_corner"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:text="千位"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutBetFunctionBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBetUnit0"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvBetUnit1"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@drawable/bg_white_circle_gray_stroke"
                android:textSize="@dimen/sp_18"
                android:textColor="#666666"
                android:text="0"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvBetUnit1"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvBetUnit2"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@drawable/bg_white_circle_gray_stroke"
                android:textSize="@dimen/sp_18"
                android:textColor="#666666"
                android:text="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvBetUnit2"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_17"
                android:background="@drawable/bg_white_circle_gray_stroke"
                android:textSize="@dimen/sp_18"
                android:textColor="#666666"
                android:text="2"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvBetUnit3"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvBetUnit2"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginStart="@dimen/dp_14"
                android:background="@drawable/bg_white_circle_gray_stroke"
                android:textSize="@dimen/sp_18"
                android:textColor="#666666"
                android:text="3"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvBetUnit4"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvBetUnit3"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginStart="@dimen/dp_14"
                android:background="@drawable/bg_white_circle_gray_stroke"
                android:textSize="@dimen/sp_18"
                android:textColor="#666666"
                android:text="4"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvBetUnit5"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                app:layout_constraintTop_toTopOf="@id/tvBetUnit7"
                app:layout_constraintEnd_toStartOf="@id/tvBetUnit6"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@drawable/bg_white_circle_gray_stroke"
                android:textSize="@dimen/sp_18"
                android:textColor="#666666"
                android:text="5"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvBetUnit6"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                app:layout_constraintTop_toTopOf="@id/tvBetUnit7"
                app:layout_constraintEnd_toStartOf="@id/tvBetUnit7"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@drawable/bg_white_circle_gray_stroke"
                android:textSize="@dimen/sp_18"
                android:textColor="#666666"
                android:text="6"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvBetUnit7"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                app:layout_constraintTop_toBottomOf="@id/tvBetUnit2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_13"
                android:background="@drawable/bg_white_circle_gray_stroke"
                android:textSize="@dimen/sp_18"
                android:textColor="#666666"
                android:text="7"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvBetUnit8"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                app:layout_constraintTop_toTopOf="@id/tvBetUnit7"
                app:layout_constraintStart_toEndOf="@id/tvBetUnit7"
                android:layout_marginStart="@dimen/dp_14"
                android:background="@drawable/bg_white_circle_gray_stroke"
                android:textSize="@dimen/sp_18"
                android:textColor="#666666"
                android:text="8"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvBetUnit9"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                app:layout_constraintTop_toTopOf="@id/tvBetUnit7"
                app:layout_constraintStart_toEndOf="@id/tvBetUnit8"
                android:layout_marginStart="@dimen/dp_14"
                android:background="@drawable/bg_white_circle_gray_stroke"
                android:textSize="@dimen/sp_18"
                android:textColor="#666666"
                android:text="9"
                android:gravity="center"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutBetFunctionBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvFunctionAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvFunctionBig"
            app:layout_constraintHorizontal_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="#666666"
            android:text="全"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvFunctionBig"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvFunctionAll"
            app:layout_constraintEnd_toStartOf="@id/tvFunctionSmall"
            app:layout_constraintHorizontal_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="#666666"
            android:text="大"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvFunctionSmall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvFunctionBig"
            app:layout_constraintEnd_toStartOf="@id/tvFunctionOdd"
            app:layout_constraintHorizontal_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="#666666"
            android:text="小"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvFunctionOdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvFunctionSmall"
            app:layout_constraintEnd_toStartOf="@id/tvFunctionEven"
            app:layout_constraintHorizontal_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="#666666"
            android:text="奇"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvFunctionEven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvFunctionOdd"
            app:layout_constraintEnd_toStartOf="@id/tvFunctionClear"
            app:layout_constraintHorizontal_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="#666666"
            android:text="偶"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvFunctionClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvFunctionEven"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="#666666"
            android:text="清"
            android:gravity="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>