<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_74"
    android:layout_marginTop="@dimen/dp_7_5"
    android:layout_marginBottom="@dimen/dp_7_5"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_marginEnd="@dimen/dp_20"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvGameName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:gravity="center|start"
        android:text="歡樂生肖"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/tvIssueNumber"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvIssueDate"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textColor="#7b7b7b"
        android:gravity="center"
        android:text="第20200423187900期"/>

    <TextView
        android:id="@+id/tvIssueDate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_15"
        android:textSize="@dimen/sp_12"
        android:textColor="#7b7b7b"
        android:gravity="center"
        android:text="03/26 19:29:24"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutIssueResult"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvGameName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_12">

        <TextView
            android:id="@+id/tvPosition1"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_gray_circle_button"
            android:text="1"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tvPosition2"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvPosition1"
            android:layout_marginStart="@dimen/dp_6"
            android:background="@drawable/bg_gray_circle_button"
            android:text="2"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tvPosition3"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvPosition2"
            android:layout_marginStart="@dimen/dp_6"
            android:background="@drawable/bg_gray_circle_button"
            android:text="3"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tvPosition4"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvPosition3"
            android:layout_marginStart="@dimen/dp_6"
            android:background="@drawable/bg_gray_circle_button"
            android:text="4"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tvPosition5"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvPosition4"
            android:layout_marginStart="@dimen/dp_6"
            android:background="@drawable/bg_gray_circle_button"
            android:text="5"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="#000000"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ivRightArrow"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_13"
        app:layout_constraintTop_toTopOf="@id/layoutIssueResult"
        app:layout_constraintBottom_toBottomOf="@id/layoutIssueResult"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_15"
        android:src="@drawable/ic_arrow_right_solid"/>

</androidx.constraintlayout.widget.ConstraintLayout>