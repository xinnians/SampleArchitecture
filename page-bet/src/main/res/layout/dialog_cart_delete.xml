<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_163"
    android:background="@drawable/bg_radius_white_board"
    >

    <TextView
        android:id="@+id/tvCartDelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认删除此注单？"
        android:textSize="@dimen/sp_18"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_20"
        android:src="@drawable/close"
        />

    <Button
        android:id="@+id/btnDelConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toBottomOf="@+id/tvCartDelTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:text="确认"
        android:textColor="#fff"
        android:background="@drawable/bg_button"
        />


</androidx.constraintlayout.widget.ConstraintLayout>