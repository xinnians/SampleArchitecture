<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_135"
    android:layout_height="@dimen/dp_126"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutBackground"
        android:layout_width="@dimen/dp_120"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_7_5"
        android:layout_marginStart="@dimen/dp_7_5"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_marginBottom="@dimen/dp_21"
        android:elevation="@dimen/dp_2"
        android:background="@drawable/bg_gray_button">
        
        <TextView
            android:id="@+id/tvLeftTime"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_34"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_tv_lefttime"
            android:textColor="#000000"
            android:textSize="@dimen/sp_16"
            android:text="00:00:00"
            android:gravity="center"/>
        
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGameName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvLeftTime"
            android:padding="@dimen/dp_8"
            android:textColor="#000000"
            android:textSize="@dimen/sp_16"
            android:text="歡樂生肖"
            android:gravity="center"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="@dimen/sp_16"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>